<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextAddPersonName"
        android:layout_width="362dp"
        android:layout_height="82dp"
        android:ems="10"
        android:hint="Enter Person Name"
        android:inputType="textPersonName"
        android:translationX="@dimen/autofill_inline_suggestion_icon_size"
        android:translationY="@dimen/autofill_inline_suggestion_icon_size" />

    <EditText
        android:id="@+id/editTextAddNumber"
        android:layout_width="362dp"
        android:layout_height="90dp"
        android:ems="10"
        android:hint="Enter Person's Number"
        android:inputType="number"
        android:translationX="@dimen/autofill_inline_suggestion_icon_size"
        android:translationY="@dimen/autofill_inline_suggestion_icon_size" />

    <Button
        android:id="@+id/button2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ff4081"
        android:onClick="buttonAddContact"
        android:text="Add Contact"
        android:translationX="@dimen/autofill_inline_suggestion_icon_size"
        android:translationY="@android:dimen/app_icon_size" />
</LinearLayout>